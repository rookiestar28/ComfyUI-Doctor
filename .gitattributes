# Auto detect text files and perform LF normalization
* text=auto eol=lf

# Configuration files
*.toml text eol=lf
.gitignore text eol=lf
.gitkeep text eol=lf

# JavaScript files should always use LF
*.js text eol=lf
*.mjs text eol=lf

# CSS files should always use LF
*.css text eol=lf

# Python files should always use LF
*.py text eol=lf

# Markdown files
*.md text eol=lf

# JSON files
*.json text eol=lf

# YAML files
*.yaml text eol=lf
*.yml text eol=lf

# Shell scripts must use LF
*.sh text eol=lf

# Windows scripts use CRLF
*.bat text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
